<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr>
            <th>ProductID</th>
            <th>Type</th>
            <th>Size</th>
            <th>Material</th>
            <th>Condition</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Homepage</th>
        </tr>
    <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.product_id %></td>
            <td><%= recref.product_type %></td>
            <td><%= recref.product_size %></td>
            <td><%= recref.product_material %></td>
            <td><%= recref.product_condition %></td>
            <td><%= recref.product_brand %></td>
            <td><%= Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(recref.product_price) %></td>
            <td><%= recref.homepage %></td>
            <td><a href='/product/<%= recref.product_id %>/show'>
            Details</a></td>
            <td><a href='/product/<%= recref.product_id %>/edit'>Edit</a></td>
            <td><a href='/product/<%= recref.product_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
        </tr>
    <% }); %>
        </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>
    <p> <a href='/product/addrecord'>Add New</a> </p>